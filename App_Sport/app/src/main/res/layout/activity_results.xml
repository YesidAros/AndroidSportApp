<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/menu"
        tools:layout_editor_absoluteX="347dp"
        tools:layout_editor_absoluteY="44dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_location"
        android:layout_width="301dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:textColorHint="@color/dark_gray"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/dark_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_location" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_sport"
        android:layout_width="301dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:textColorHint="@color/dark_gray"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/dark_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_location">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_sport" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/results"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="154dp"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="414dp"
        android:layout_height="135dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="191dp">

        <ImageView
            android:id="@+id/iv_profile_picture1"
            android:layout_width="108dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/gente" />

        <TextView
            android:id="@+id/price1"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="105dp"
            android:text="@string/price"
            android:textColor="@color/dark_gray" />

        <TextView
            android:id="@+id/profile_info1"
            android:layout_width="283dp"
            android:layout_height="50dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="55dp"
            android:text="@string/profile_info"
            android:textColor="@color/dark_gray" />

        <TextView
            android:id="@+id/profile_name1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="20dp"
            android:text="@string/profile_name"
            android:textColor="@color/dark_gray" />

        <ImageView
            android:id="@+id/iv_like1"
            android:layout_width="23dp"
            android:layout_height="44dp"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/like_active" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="414dp"
        android:layout_height="135dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="337dp">

        <ImageView
            android:id="@+id/iv_profile_picture2"
            android:layout_width="108dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/gente" />

        <TextView
            android:id="@+id/price2"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="105dp"
            android:text="@string/price"
            android:textColor="@color/dark_gray" />

        <TextView
            android:id="@+id/profile_info2"
            android:layout_width="283dp"
            android:layout_height="50dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="55dp"
            android:text="@string/profile_info"
            android:textColor="@color/dark_gray" />

        <TextView
            android:id="@+id/profile_name2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="20dp"
            android:text="@string/profile_name"
            android:textColor="@color/dark_gray" />

        <ImageView
            android:id="@+id/iv_like2"
            android:layout_width="23dp"
            android:layout_height="44dp"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/like_inactive" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="414dp"
        android:layout_height="135dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="482dp">

        <ImageView
            android:id="@+id/iv_profile_picture3"
            android:layout_width="108dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/gente" />

        <TextView
            android:id="@+id/price3"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="105dp"
            android:text="@string/price"
            android:textColor="@color/dark_gray" />

        <TextView
            android:id="@+id/profile_info3"
            android:layout_width="283dp"
            android:layout_height="50dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="55dp"
            android:text="@string/profile_info"
            android:textColor="@color/dark_gray" />

        <TextView
            android:id="@+id/profile_name3"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="20dp"
            android:text="@string/profile_name"
            android:textColor="@color/dark_gray" />

        <ImageView
            android:id="@+id/iv_like3"
            android:layout_width="23dp"
            android:layout_height="44dp"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/like_active" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/menu_search"
        android:layout_width="411dp"
        android:layout_height="97dp"
        android:background="@color/banner_gray"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_likes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="43dp"
            android:layout_height="65dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/search" />

        <ImageView
            android:id="@+id/iv_likes"
            android:layout_width="43dp"
            android:layout_height="65dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/like_inactive2" />

        <ImageView
            android:id="@+id/iv_comments"
            android:layout_width="43dp"
            android:layout_height="65dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/comentario_inactive" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>